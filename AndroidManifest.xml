<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.work.projectviewer">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/web_hi_res_512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.project.work.projectviewer.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.work.projectviewer.Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.project.work.projectviewer.choose_function"
            android:label="@string/title_activity_choose_function"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.project.work.projectviewer.ProjectDetailsActivity"
            android:label="@string/title_layout_view_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.project.work.projectviewer.ProjectListView"
            android:label="@string/title_layout_view_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.project.work.projectviewer.ProjectDetailsView"
            android:label="Project Details"
            android:theme="@style/AppTheme" />
        <activity android:name="com.project.work.projectviewer.activityforgotpassword"
            android:label="@string/title_activity_forgot_password" ></activity>
    </application>

</manifest>